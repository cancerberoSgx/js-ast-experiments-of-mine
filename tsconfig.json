{
  "compilerOptions": {
    "target": "es6",   
    "module": "commonjs", 
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["es6", "dom"],
    "outDir": "./dist", 
    "rootDir": ".",
    "checkJs": false,
    "strict": true, 
    "strictNullChecks": false,
    "noImplicitAny": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true
  }, 
  "include": [  
    "src/**/*.ts", 
    "src/**/*.tsx"
  ], 
  "exclude": [
    "src/examples/**/*"
  ]
}